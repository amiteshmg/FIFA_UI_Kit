<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Facts"
    android:background="#f1f2f5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/mask_group_6">

        <include layout="@layout/toolbar"/>


    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Group C"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:gravity="center">

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Japan"
            android:paddingLeft="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12.7sp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_japan"
            android:scaleType="fitXY"/>

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="0 - 0 "
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="13.7sp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_france"
            android:scaleType="fitXY"/>


        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:paddingRight="50dp"
            android:text="France"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12.7sp"/>



    </LinearLayout>

    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:text="Moscow, Luzhniki Stadium"
        android:layout_gravity="center"
        android:textSize="13sp"/>


    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_margin="13dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="21.72dp"
            android:paddingRight="25dp">



            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stadium"
                android:textSize="15.3dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="39.32dp"
                android:textColor="#383838"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="11dp">

                <ImageView
                    android:layout_width="16.7dp"
                    android:layout_height="11.87dp"
                    android:src="@drawable/ic_stadium"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="Stadium"
                    android:layout_weight="1"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cfbc91"
                    android:text="Luzhniki Stadium"
                    android:textSize="12.3sp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="11dp">

                <ImageView
                    android:layout_width="14.7dp"
                    android:layout_height="13.87dp"
                    android:src="@drawable/ic_skyline"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="City"
                    android:layout_weight="1"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cfbc91"
                    android:text="Moscow"
                    android:textSize="12.3sp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="22dp">

                <ImageView
                    android:layout_width="14.7dp"
                    android:layout_height="13.87dp"
                    android:src="@drawable/ic_teamwork"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="Attendance"
                    android:layout_weight="1"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cfbc91"
                    android:text="78.011"
                    android:textSize="12.3sp"/>



            </LinearLayout>

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:textSize="15.3dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="39.32dp"
                android:textColor="#383838"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="11dp">

                <ImageView
                    android:layout_width="14.7dp"
                    android:layout_height="13.87dp"
                    android:src="@drawable/ic_sun"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="Conditions"
                    android:layout_weight="1"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cfbc91"
                    android:text="Partly Cloudly"
                    android:textSize="12.3sp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="11dp">

                <ImageView
                    android:layout_width="9.7dp"
                    android:layout_height="13.87dp"
                    android:src="@drawable/ic_thermometer"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="Temperature"
                    android:layout_weight="1"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cfbc91"
                    android:text="24  C"
                    android:textSize="12.3sp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="11dp">

                <ImageView
                    android:layout_width="10.7dp"
                    android:layout_height="13.87dp"
                    android:src="@drawable/ic_drop_silhouette"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="Humidity"
                    android:layout_weight="1"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cfbc91"
                    android:text="34%"
                    android:textSize="12.3sp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="11dp">

                <ImageView
                    android:layout_width="14.7dp"
                    android:layout_height="13.87dp"
                    android:src="@drawable/ic_wind_sign"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="Wind"
                    android:layout_weight="1"
                    android:textSize="12.3sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#cfbc91"
                    android:text="11 km/h"
                    android:textSize="12.3sp"/>



            </LinearLayout>

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Officials"
                android:textSize="15.3dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="39.32dp"
                android:textColor="#383838"/>






        </LinearLayout>


    </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
