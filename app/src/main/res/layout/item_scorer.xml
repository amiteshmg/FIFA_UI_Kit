<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardCornerRadius="9.3dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="12.3dp"
        android:layout_marginBottom="10.7dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingRight="10dp"
                android:id="@+id/live"
                android:layout_margin="13.5dp">
                
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_ellipse_3"/>


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e85050"
                    android:text="LIVE"
                    android:id="@+id/live1"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:gravity="center">

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="Japan"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12.7sp"/>
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_japan"
                    android:scaleType="fitXY"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#c9bc93"
                    android:text="0 - 0 "
                    android:layout_weight="1"
                    android:id="@+id/score"
                    android:gravity="center"
                    android:textSize="13.7sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_france"
                    android:scaleType="fitXY"/>


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#383838"
                    android:text="France"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12.7sp"/>



            </LinearLayout>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cccfdc"
                android:text="Group C"
                android:id="@+id/groupid"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="18dp"
                android:layout_gravity="center"
                android:textSize="10sp"/>



        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>