        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/linear1"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group_23"
                android:id="@+id/image1"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:id="@+id/text1"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear2"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/image2"
                android:src="@drawable/group_271"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:textColor="#cbcfdd"
                android:id="@+id/text2"
                android:text="Live Events"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear3"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:id="@+id/image3"
                android:src="@drawable/ic_football_court_top_view"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:textSize="8.9sp"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/linear4"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:id="@+id/image4"
                android:src="@drawable/stadium1"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:id="@+id/text4"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear5"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:id="@+id/image5"
                android:layout_height="20dp"
                android:src="@drawable/group_261"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:id="@+id/text5"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

