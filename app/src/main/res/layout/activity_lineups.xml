<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lineups">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/mask_group_6">
        <include layout="@layout/toolbar"/>



        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Group C"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:gravity="center">

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Japan"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:gravity="center"
                android:textSize="12.7sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_japan"
                android:scaleType="fitXY"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="0 - 0 "
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="13.7sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_france"
                android:scaleType="fitXY"/>


            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="France"
                android:layout_weight="1"
                android:paddingRight="50dp"
                android:gravity="center"
                android:textSize="12.7sp"/>



        </LinearLayout>

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:text="Moscow, Luzhniki Stadium"
            android:layout_gravity="center"
            android:textSize="13sp"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/lll"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">


        <customfonts.MyTextView_Roboto_Medium
            android:id="@+id/txt_near_by_you"
            android:layout_width="132dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@drawable/left_half_fill_mustered_rect"
            android:text="Japan"
          />

        <customfonts.MyTextView_Roboto_Medium
            android:id="@+id/txt_toprated"
            android:layout_width="132dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@drawable/right_half_mustered_rect"
            android:text="France" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/linear1"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group_23"
                android:id="@+id/image1"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:id="@+id/text1"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear2"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/image2"
                android:src="@drawable/group_271"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:textColor="#cbcfdd"
                android:id="@+id/text2"
                android:text="Live Events"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear3"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:id="@+id/image3"
                android:src="@drawable/ic_football_court_top_view"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:textSize="8.9sp"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/linear4"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:id="@+id/image4"
                android:src="@drawable/stadium1"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:id="@+id/text4"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear5"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:id="@+id/image5"
                android:layout_height="20dp"
                android:src="@drawable/group_261"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.9sp"
                android:id="@+id/text5"
                android:textColor="#cbcfdd"
                android:text="Live Events"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>